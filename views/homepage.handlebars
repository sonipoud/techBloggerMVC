<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a href={{post.title}}</a>
        <span>({{post.content}})</span>
      </div>
      <div class="meta">
       {{post.created_at}} by {{post.user.username}}
        
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>
