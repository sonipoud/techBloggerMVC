<div class="card #ffffff white">
  <div class="card-content black-text">
    <article class="post">
      <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        <p>{{content}}</p>
      </div>
      <div class=" meta">
        Posted by {{user.username}} on {{format_date created_at}}
        <a href="/post/{{id}}">{{comments.length}} comments</a>
      </div>
    </article>
  </div>
</div>