<div class="card #ffffff white">
    <div class="card-content black-text">
        <div class="comments">
            {{#each this}}
            <section class="comment">
                <div class="meta">
                    {{user.username}} on {{format_date created_at}}
                </div>
                <div class="text">
                    {{comment_text}}
                </div>
            </section>
            {{/each}}
        </div>
    </div>
</div>